{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2017",
    "sourceMap": true,
    "skipLibCheck": true,
    "composite": true,
    "incremental": true,
    
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDir": "./src"
  },
  "exclude": ["./prisma", "./dist", "packages/**/tests/**", "packages/**/dist/**"]
}
